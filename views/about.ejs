        }
        
        .value-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 20px;
            transition: all 0.3s;
        }
        
        /* Section Headings */
        .section-heading {
            position: relative;
            margin-bottom: 60px;
            text-align: center;
        }
        
        .section-heading:after {
            content: '';
            position: absolute;
            width: 80px;
            height: 3px;
            background: var(--primary-color);
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
        }
        
        /* Animations */
